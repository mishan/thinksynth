libdir=@libdir@
prefix=@prefix@

# XXX
all: .bstamp libthink.so

.bstamp:
	@touch $@

include ../build.mk

PICFLAGS = -fPIC
INCLUDES = -I..
CXXFLAGS += @SIGC_CFLAGS@
LDFLAGS += @LIBS@ @SIGC_LIBS@

LIBOBJS = \
	@NSMODULE_DL_CPP@ \
	@BASENAME_CPP@ \
	thinklang.o \
	thinklex.o \
	thArg.o \
	thMidiChan.o \
	thMidiNote.o \
	thMod.o \
	thNode.o \
	thPlugin.o \
	thPluginManager.o \
	thSynth.o


libthink.so: libthink.so.3
	ln -sf libthink.so.3 libthink.so
	@rm -f .bstamp

libthink.so.3: $(LIBOBJS)
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -shared -Wl,-soname,$@ -o $@ $(LIBOBJS)

libthink.a: $(LIBOBJS)
	ar crsv $@ $(LIBOBJS)

thinklex.cpp: thinklex.ll thinklang.o
	flex -o$@ thinklex.ll

thinklang.hpp:

clean::
	rm -f libthink.so.3 .bstamp

distclean::
	rm -f thinklang.cpp thinklex.cpp thinklang.hpp thinklang.h Makefile

install:
	mkdir -p $(DESTDIR)$(libdir)
	cp -f libthink.so.3 $(DESTDIR)$(libdir)
	ln -sf libthink.so.3 $(DESTDIR)$(libdir)/libthink.so

uninstall:
	rm -f $(DESTDIR)$(libdir)/libthink.so.3 $(DESTDIR)$(libdir)/libthink.so
