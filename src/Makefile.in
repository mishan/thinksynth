# $Id: Makefile.in,v 1.20 2004/01/28 05:25:59 misha Exp $

BINARY = thinksynth

bindir=@bindir@
prefix=@prefix@

all: thinksynth thinkseq

include ../build.mk

PICFLAGS = -fPIC
INCLUDES = -I.. -I../libthink
LDFLAGS += @LIBS@ -L../libthink -lthink

MAINOBJS = main.o
SEQOBJS = seq.o

thinkseq: $(SEQOBJS)
	$(CXX) $(CXXFLAGS) -o $@ $(SEQOBJS) $(LDFLAGS) -lthink -L.

thinksynth: $(MAINOBJS)
	$(CXX) $(CXXFLAGS) -o $@ $(MAINOBJS) $(LDFLAGS) -lthink -L.

clean::
	rm -f thinksynth thinkseq

distclean::
	rm -f Makefile

install:
	mkdir -p $(DESTDIR)$(bindir)
	cp -f thinksynth $(DESTDIR)$(bindir)
	cp -f thinkseq $(DESTDIR)$(bindir)

uninstall:
	rm -f $(DESTDIR)$(bindir)/thinksynth
	rm -f $(DESTDIR)$(bindir)/thinkseq
