# $Id: Makefile.in,v 1.9 2003/05/30 00:55:41 aaronl Exp $

BINARY = thinksynth

bindir=@bindir@
prefix=@prefix@

all: thinksynth

include ../build.mk

INCLUDES = -I..
LDFLAGS += @LIBS@

OBJS = \
	thinklang.o \
	thinklex.o \
	main.o \
	thArg.o \
	thAudioBuffer.o \
	thMidiChan.o \
	thMidiNote.o \
	thMod.o \
	thNode.o \
	thOSSAudio.o \
	thPlugin.o \
	thPluginManager.o \
	thPluginSignaler.o \
	thSynth.o \
	thWav.o

thinksynth: $(OBJS)
	$(CXX) -rdynamic -o $@ $(OBJS) $(LDFLAGS)

thinklex.cpp: thinklex.ll thinklang.o
	flex -o$@ thinklex.ll

thinklang.hpp:

distclean::
	rm -f thinklang.cpp thinklex.cpp thinklang.hpp

install:
	mkdir -p $(DESTDIR)$(bindir)
	cp -f thinksynth $(DESTDIR)$(bindir)

uninstall:
	rm -f $(DESTDIR)$(bindir)/thinksynth
