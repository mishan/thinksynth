# $Id: Makefile.in,v 1.43 2004/06/30 04:40:18 joshk Exp $

BINARY = thinksynth

bindir=@bindir@
prefix=@prefix@

all: thinksynth

include ../build.mk

PICFLAGS =
LDFLAGS += @LIBS@ @GTKMM_LIBS@ @GTHREAD_LIBS@ -L../libthink -lthink @JACK_LIBS@ @ALSA_LIBS@
INCLUDES = -I.. -I../libthink @GTKMM_CFLAGS@ @JACK_CFLAGS@ @ALSA_CFLAGS@
WIDGETSRCS = gui/MainSynthWindow.cpp gui/PatchSelWindow.cpp gui/Keyboard.cpp gui/KeyboardWindow.cpp
MAINOBJS = main.o ui.o gthALSAAudio.o gthALSAMidi.o gthJackAudio.o gthPrefs.o

thinksynth: ../libthink/libthink.so.3 gui/gth.a $(MAINOBJS)
	$(CXX) $(CXXFLAGS) -o $@ $(MAINOBJS) $(LDFLAGS) gui/gth.a

gui/gth.a: $(WIDGETSRCS)
	$(MAKE) -C gui gth.a

../libthink/libthink.so.3:
# XXX
ifeq (,$(wildcard ../libthink/.bstamp))
	$(MAKE) -C ../libthink
endif

clean::
	rm -f thinksynth

distclean::
	rm -f Makefile

install:
	mkdir -p $(DESTDIR)$(bindir)
	cp -f thinksynth $(DESTDIR)$(bindir)

uninstall:
	rm -f $(DESTDIR)$(bindir)/thinksynth
