# $Id: Makefile.in,v 1.26 2004/03/26 07:55:01 joshk Exp $

BINARY = thinksynth monotest

bindir=@bindir@
prefix=@prefix@

all: thinksynth monotest

include ../build.mk

PICFLAGS = -fPIC
INCLUDES = -I.. -I../libthink @GTKMM_CFLAGS@
LDFLAGS += @LIBS@ @GTKMM_LIBS@ @GTHREAD_LIBS@ -L../libthink -lthink

MAINOBJS = main.o ui.o $(WIDGETOBJS)
MONOMAINOBJS = monotest.o
WIDGETOBJS = PatchSelWindow.o

thinksynth: $(MAINOBJS)
	$(CXX) $(CXXFLAGS) -o $@ $(MAINOBJS) $(LDFLAGS)  -lthink -L.

monotest: $(MONOMAINOBJS)
	$(CXX) $(CXXFLAGS) -o $@ $(MONOMAINOBJS) $(LDFLAGS) -lthink -L.

clean::
	rm -f thinksynth
	rm -f monotest

distclean::
	rm -f Makefile

install:
	mkdir -p $(DESTDIR)$(bindir)
	cp -f thinksynth $(DESTDIR)$(bindir)

uninstall:
	rm -f $(DESTDIR)$(bindir)/thinksynth
