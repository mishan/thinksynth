# $Id: Makefile.in,v 1.3 2004/11/17 21:19:07 joshk Exp $

prefix=@prefix@
datadir=@datadir@
patch_dirs = bass leads organs pads 

default: all

include ../build.mk

# Dummy target
all:

distclean::
	rm -f Makefile

clean::

install:
	install -d $(DESTDIR)$(datadir)/thinksynth/
	install -d $(DESTDIR)$(datadir)/thinksynth/patches
	for dir in $(patch_dirs); do \
		cp -a $$dir $(DESTDIR)$(datadir)/thinksynth/patches/$$dir; \
	done

uninstall:
	cd $(DESTDIR)$(datadir)/thinksynth/patches && rm -rf $(patch_dirs)
