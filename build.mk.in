# $Id: build.mk.in,v 1.15 2003/05/11 07:29:18 aaronl Exp $

CXX=@CXX@
CXXFLAGS=@CXXFLAGS@

LDFLAGS=@LDFLAGS@
USE_SONAME=@USE_SONAME@
USING_GNU_CXX=@USING_GNU_CXX@
CXX_MT_BROKEN=@CXX_MT_BROKEN@

%.cpp: %.yy
	@YACC@ -o $@ $<
	if [ -f $(<:%.yy=%.hpp) ]; then mv $(<:%.yy=%.hpp) $(<:%.yy=%.h); fi

%.cpp: %.ll
	@LEX@ -o $@ $<

%.o: %.cpp
	$(CXX) $(CXXFLAGS) @DEP_FLAGS@ $(INCLUDES) -c -o $@ $<

%@SHARED_SUFFIX@: %.cpp
	$(CXX) $(CXXFLAGS) @DEP_FLAGS@ $(INCLUDES) -shared @SONAME_FLAGS@ -o $@ $< $(SO_LDFLAGS)

ifeq ($(USING_GNU_CXX),yes)
ifeq ($(CXX_MT_BROKEN),yes)
	sed 's/\.o:/.@SHARED_SUFFIX@:/g' .$<.dt > .$<.dtx
	mv .$<.dtx .$<.dt
endif

-include .deps/.*.dt
endif

distclean:: clean

clean::
	rm -rf .*.dt *@SHARED_SUFFIX@ *.o $(BINARY)

.PHONY: distclean clean
