prefix=@prefix@
datadir=@datadir@
dsp_files=$(wildcard *.dsp)
args_dsp_files=$(wildcard args/*.dsp)

default: all

include ../build.mk

# Dummy target
all:

distclean::
	rm -f Makefile

clean::

install:
	install -d $(DESTDIR)/$(datadir)/thinksynth
	cp -uf *.dsp $(DESTDIR)/$(datadir)/thinksynth
	install -d $(DETSDIR)/$(datadir)/thinksynth/args
	cp -uf args/*.dsp $(DESTDIR)/$(datadir)/thinksynth/args

uninstall:
	cd $(DESTDIR)/$(datadir)/thinksynth && rm -f $(dsp_files) $(args_dsp_files)
	-rmdir $(DESTDIR)/$(datadir)/thinksynth/args
	-rmdir $(DESTDIR)/$(datadir)/thinksynth
