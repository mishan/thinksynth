# $Id: Makefile.in,v 1.6 2004/03/26 08:29:17 joshk Exp $

prefix=@prefix@
datadir=@datadir@
DSP_DIST_FILES=$(shell find -name '*.dsp')

default: all

include ../build.mk

# Dummy target
all:
	@true

distclean::
	rm -f Makefile

clean::

install:
	install -d $(DESTDIR)/$(datadir)/thinksynth
	cp -uf *.dsp $(DESTDIR)/$(datadir)/thinksynth

uninstall:
	cd $(DESTDIR)/$(datadir)/thinksynth && rm -f $(DSP_DIST_FILES)
	-rmdir $(DESTDIR)/$(datadir)/thinksynth
